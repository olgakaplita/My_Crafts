<td><%= link_to 'New craft', new_craft_path %><td>

<h1>Lista przedmiotów</h1>
<table> <tr>
    <th>Przedmiot</th>
    <th>Opis</th>
  </tr>
<% @craft.each do |craft| %> <tr>
<td><%= craft.przedmiot %></td>
<td><%= craft.opis %></td>
<td><%= link_to 'Pokaż', craft_path(craft) %></td>
<td><%= link_to 'Edytuj', edit_craft_path(craft) %></td>
<td><%= link_to 'Usuń', craft_path(craft),
    method: :delete,
    data: { confirm: 'Jesteś pewny?'} %></td>

</tr>
<% end %> </table>
